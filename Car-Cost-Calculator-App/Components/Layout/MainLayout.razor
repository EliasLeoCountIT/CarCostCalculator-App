@inherits LayoutComponentBase

@* Required *@
<MudThemeProvider Theme="_appThemes.Theme"/>
<MudPopoverProvider />
@* Needed for dialogs *@
<MudDialogProvider />
@* Needed for snackbars *@
<MudSnackbarProvider />

<MudLayout>
	<MudAppBar Elevation="4" >
		<MudIconButton Color="Color.Inherit"
					   Icon="@(_isDrawerOpen ? Icons.Material.Filled.MenuOpen : Icons.Material.Filled.Menu)"
					   OnClick="() => _isDrawerOpen = !_isDrawerOpen" />
		<MudText Typo="Typo.h6"> Car Cost Calculator </MudText>
	</MudAppBar>
	<!-- Sidebar Navigation -->
	<MudDrawer Variant="DrawerVariant.Responsive" @bind-Open="_isDrawerOpen" Elevation="1">
		<NavMenu />
	</MudDrawer>

	<MudMainContent>
		<MudContainer MaxWidth="MaxWidth.Large" Class="mt-4">
			@Body
		</MudContainer>
	</MudMainContent>
</MudLayout>


